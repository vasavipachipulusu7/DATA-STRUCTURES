#include<stdio.h>
int main()
{
    int i,n,pos,A[50];
    printf("enter the size");
    scanf("%d",&n);
    printf("enter the elements");
    for(i=0; i<n; i++)
    scanf("%d",&A[i]);
    printf("enter the position for deletion");
    scanf("%d",&pos);
    for(i=pos; i<n; i++)
    {
        A[i]=A[i+1];
    }
    printf("the output is:");
    for(i=0; i<=n-2; i++)
    printf("%d\t",A[i]);
    return 0;
}
